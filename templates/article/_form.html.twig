{# templates/article/_form.html.twig #}

{{ form_start(form) }}

{# Affichage des erreurs globales #}
<div style="color: #e74c3c; margin-bottom: 1rem;">
	{{ form_errors(form) }}
</div>

<div class="form-group">
	{{ form_label(form.title, 'Titre de l\'article') }}
        {{ form_widget(form.title, {'attr': {'placeholder': 'Ex: Les nouveautés de Symfony 7...'}}) }}
        <div style="color: #e74c3c; font-size: 0.85rem; margin-top: 5px;">
            {{ form_errors(form.title) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.category, 'Catégorie') }}
        {{ form_widget(form.category) }}
        <div style="color: #e74c3c; font-size: 0.85rem; margin-top: 5px;">
            {{ form_errors(form.category) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.content, 'Corps du texte') }}
        {# On agrandit la zone avec rows="12" pour le confort d'écriture #}
        {{ form_widget(form.content, {'attr': {'rows': '12', 'placeholder': 'Rédigez votre article ici...'}}) }}
	<div style="color: #e74c3c; font-size: 0.85rem; margin-top: 5px;">
		{{ form_errors(form.content) }}
	</div>
</div>

<div style="margin-top: 2rem; text-align: right; border-top: 1px solid #eee; padding-top: 20px;">
	<button class="btn btn-primary">
		{{ button_label|default('Enregistrer les modifications') }}
	</button>
</div>

{{ form_end(form) }}
