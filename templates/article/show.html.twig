{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	{{ article.title }}
{% endblock %}

{% block body %}
	<div style="margin-bottom: 2rem; font-size: 0.9rem; color: #666;">
		<a href="{{ path('app_home') }}" style="color: #666; text-decoration: none;">Accueil</a>
		<span style="margin: 0 10px;">/</span>
		<a href="{{ path('app_article_index') }}" style="color: #666; text-decoration: none;">Articles</a>
		<span style="margin: 0 10px;">/</span>
		<span style="color: var(--primary);">{{ article.title }}</span>
	</div>

	<article style="background: white; padding: 3rem; border-radius: 12px; box-shadow: var(--shadow); max-width: 900px; margin: 0 auto;">

		<header style="text-align: center; margin-bottom: 3rem;">
			<div style="text-transform: uppercase; color: var(--accent); font-weight: bold; letter-spacing: 2px; margin-bottom: 1rem;">
				{{ article.category ? article.category.name : 'Non class√©' }}
			</div>

			<h1 style="font-size: 2.5rem; color: var(--primary); margin-bottom: 1rem; line-height: 1.2;">
				{{ article.title }}
			</h1>

			<div style="color: #999; font-style: italic;">
				Publi√© le
				{{ article.createdAt ? article.createdAt|date('d F Y') : '' }}
			{# Si tu as un champ auteur, tu peux l'ajouter ici #}
				{# par <span style="color: var(--text);">R√©daction</span> #}
			</div>
		</header>

		<div style="width: 100%; height: 400px; background: linear-gradient(135deg, #ecf0f1 0%, #bdc3c7 100%); border-radius: 8px; margin-bottom: 3rem; display: flex; align-items: center; justify-content: center; font-size: 4rem;">
			üì∞
		</div>

		<div
			style="font-size: 1.15rem; line-height: 1.8; color: #444; margin-bottom: 4rem;">
			{# Le filtre nl2br permet de conserver les sauts de ligne du texte brut #}
			{{ article.content|nl2br }}
		</div>

		<div style="border-top: 1px solid #eee; padding-top: 2rem; display: flex; justify-content: space-between; align-items: center;">
			<a href="{{ path('app_article_index') }}" class="btn btn-outline" style="border-color: var(--primary); color: var(--primary); margin-left: 0;">
				‚Üê Retour aux articles
			</a>

			<div>
				{# Lien d'√©dition discret pour l'admin #}
				<a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn" style="background: #eee; color: #666;">
					Modifier l'article
				</a>

				{# Le formulaire de suppression est souvent inclus ici par le CRUD #}
				<div style="display: inline-block; margin-left: 10px;">
					{{ include('article/_delete_form.html.twig') }}
				</div>
			</div>
		</div>

	</article>

	<div style="max-width: 900px; margin: 4rem auto 0;">
		<h3 style="border-left: 4px solid var(--accent); padding-left: 15px; color: var(--primary);">Dans la m√™me rubrique</h3>
		<p style="color: #666; margin-top: 1rem;">D'autres articles passionnants seront bient√¥t disponibles ici.</p>
	</div>
{% endblock %}
